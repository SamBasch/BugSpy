@page
@using BugSpy.Models.Enums
@using BugSpy.Services.Interfaces;
@model IndexModel
@inject IBTFileService ImageService
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>












  <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="g-col-12 g-col-lg-8 g-col-xxl-9">
    <!-- BEGIN: Display Information -->
    <div class="intro-y box mt-lg-5">
        <div class="d-flex align-items-center p-5 border-bottom border-gray-200 dark-border-dark-5">
            <h2 class="fw-medium fs-base me-auto">
                Display Information
            </h2>
        </div>
        <div class="p-5">
            <div class="d-flex flex-column-reverse flex-xl-row flex-column">
                <div class="flex-1 mt-6 mt-xl-0">
                    <div class="grid columns-12 gap-x-5 gap-y-0">
                        <div class="g-col-12 g-col-xxl-6">

                            <div class="form-floating">
                                <input asp-for="Username" class="form-control" disabled />
                                <label asp-for="Username" class="form-label"></label>
                            </div>


                            <div class="mt-3 form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>

                        </div>
                        <div class="g-col-12 g-col-xxl-6">
                            <div class="mt-3 mt-xxl-0">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" />
                                    <label asp-for="Input.FirstName"></label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-3">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" />
                                    <label asp-for="Input.LastName"></label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                    </div>
                        <button id="update-profile-button" type="submit" class="mt-3 w-100 btn btn-lg btn-primary">Save</button>
                </div>
                <div class="w-52 mx-auto me-xl-0 ms-xl-6">
                        <div class="form-floating">
                            <label asp-for="Input.ImageFileData" style="width: 100%;"></label>

                            <img id="userImage" class="img-fluid img-thumbnail rounded" src="@ImageService.ConvertByteArrayToFile(Model.Input.ImageFileData, Model.Input.ImageFileType, (int)DefaultImage.BTUserImage)" />

                            <input type="file" asp-for="Input.ImageFormFile" class="form-control" accept=".png,.jpg,.jpeg,.gif,.tif"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('userImage').src = window.URL.createObjectURL(this.files[0])" />

                            <span asp-validation-for="Input.ImageFormFile" class="text-danger"></span>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Display Information -->
    <!-- BEGIN: Personal Information -->

    <!-- END: Personal Information -->
</div>
                </div>


</form>






















