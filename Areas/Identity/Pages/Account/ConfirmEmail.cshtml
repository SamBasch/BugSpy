@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="card">
    <div class="header">
        <p class="lead">@ViewData["Title"]</p>
    </div>
    <div class="body">
        <a class="btn btn-primary btn-lg btn-block" asp-area="Identity" asp-page="/Account/Login"><i class="fade fa-sign-in"><span>SIGN IN</span></i></a>
    </div>
</div>

