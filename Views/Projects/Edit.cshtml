@model BugSpy.Models.Project

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">




<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Created" />
    <input type="hidden" asp-for="ImageFileData" />
    <input type="hidden" asp-for="ImageFileType" />
    <div class="intro-y box p-5">
        <div>
            <label asp-for="Name" class="control-label">Project Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>




        <div class="mt-3">
            <label asp-for="Members" class="form-label">Members</label>
            <select asp-items="@ViewBag.Members" name="selected" data-placeholder="Select your project team" class="tom-select w-full" id="crud-form-2" multiple>
                <option></option>
            </select>
        </div>


        <div class="mt-3 form-group">
            <label asp-for="ProjectPriorityId" class="control-label">Project Priority</label>
            <select asp-for="ProjectPriorityId" class="form-control" asp-items="ViewBag.ProjectPriorityId"></select>
        </div>

        <div class="mt-3">
            <label class="form-label">Dates</label>
            <div class="grid columns-2 gap-2">
                <div class="input-group g-col-2 g-col-sm-1">
                    <div id="input-group-3" class="input-group-text">Start Date</div>
                    @* <label asp-for="StartDate" class="control-label"></label>*@
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="input-group g-col-2 g-col-sm-1 mt-2 mt-sm-0">
                    <div id="input-group-4" class="input-group-text">End Date</div>
                    @* <label asp-for="EndDate" class="control-label"></label>*@
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

            </div>
        </div>

        <div class="border border-gray-200 dark-border-dark-5 rounded-2 p-5">
            <div class="fw-medium d-flex align-items-center border-bottom border-gray-200 dark-border-dark-5 pb-5"> <i data-feather="chevron-down" class="w-4 h-4 me-2"></i> Text Content </div>
            <div class="mt-5">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="editor form-control">

                            </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImageFormFile" class="control-label">Project Image</label>
            <img class="img-fluid border rounded-3 m-2" style="max-height: 250px;" src="~/img/DefaultProjectImage.png" id="projectImage">
            <input asp-for="ImageFormFile" type="file" class="form-control mt-3 pt-2" accept=".png,.jpg,.jpeg,.gif"
                   onchange="document.getElementById('projectImage').src = window.URL.createObjectURL(this.files[0])" />
        </div>

        <div class="text-end mt-5">
            <button type="button" class="btn btn-outline-secondary w-24 me-1">Cancel</button>
            <button type="submit" value="Edit" class="btn btn-primary w-24">Save</button>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
